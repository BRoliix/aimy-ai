# Agentic AI Assistant Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Pipeline (LLM + tool bridge)
PIPELINE_ENABLED=true

# Whisper transcription models (server-side /api/transcribe)
WHISPER_MODEL=whisper-1
WHISPER_FALLBACK_MODEL=gpt-4o-mini-transcribe

# STT/TTS client configuration (browser)
VOICE_LANG=en-US
VOICE_RATE=1.0
VOICE_PITCH=1.0
VOICE_VOLUME=0.8
PREFERRED_VOICES=Karen,Samantha,Alex
STT_RESTART_DELAY_MS=100

# Save/preview policy
PRIMARY_SAVE_DIR=~/Desktop/NekoAI
SECONDARY_SAVE_DIR=~/Documents/NekoAIGenerated
CONTENT_PREVIEW_LIMIT=1000
ALLOWED_PREVIEW_TYPES=html,txt,md,py,js,css

# API / routing (leave empty for root, or /api for prefix)
API_PREFIX=

# Prompt config (customize tool name and capabilities CSV if needed)
TOOL_NAME=neko_tool
# CAPABILITIES=Application creation,Web search,Code generation

# Speech Configuration (legacy, for direct_voice_ai.py)
SPEECH_RECOGNITION_TIMEOUT=5
SPEECH_RECOGNITION_PHRASE_TIMEOUT=1
TTS_RATE=200
TTS_VOLUME=0.9

# Wake Word Configuration (legacy)
WAKE_WORD=assistant

# System Configuration
ENABLE_SYSTEM_COMMANDS=true
ENABLE_WEB_COMMANDS=true
ENABLE_FILE_OPERATIONS=true
